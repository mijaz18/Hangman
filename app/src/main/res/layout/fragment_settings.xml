<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#170D0D"
    android:backgroundTint="#1361A5"
    tools:context=".ui.SettingsFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/settings_title"
        android:layout_width="195dp"
        android:layout_height="68dp"
        android:fontFamily="sans-serif-thin"
        android:text="@string/setting_title"
        android:textColor="#F3F3F3"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.11" />

    <Button
        android:id="@+id/welcome_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="396dp"
        android:text="@string/welcome"
        app:layout_constraintEnd_toEndOf="@+id/settings_title"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/settings_title"
        app:layout_constraintTop_toBottomOf="@+id/settings_title" />

    <RadioButton
        android:id="@+id/red_radioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:text="@string/red_back"
        android:textColor="#F4F4F4"
        app:layout_constraintEnd_toEndOf="@+id/settings_title"
        app:layout_constraintStart_toStartOf="@+id/settings_title"
        app:layout_constraintTop_toBottomOf="@+id/settings_title" />

    <RadioButton
        android:id="@+id/blue_radioButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:text="@string/blue_back"
        android:textColor="#F6F3F3"
        app:layout_constraintEnd_toEndOf="@+id/settings_title"
        app:layout_constraintStart_toStartOf="@+id/settings_title"
        app:layout_constraintTop_toBottomOf="@+id/red_radioButton" />

</androidx.constraintlayout.widget.ConstraintLayout>